
<!doctype html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Dear Coder | Tech Letters from Kasey</title>
        <link rel="icon" type="image/png" href="~/img/favicon-32x32.png" />
        <!-- font awesome icons (free version)-->
        <script src="//use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
        <!-- google fonts-->
        <link href="//fonts.googleapis.com/css?family=lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
        <link href="//fonts.googleapis.com/css?family=open+sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css2?family=Enriqueta:wght@400;600&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
        <!-- core theme css (includes bootstrap)-->
        <link href="~/css/styles.css" rel="stylesheet" />
        <link href="~/css/summernote-bs4.css" rel="stylesheet" />
        <link href="~/css/CustomStyle.css" rel="stylesheet" />

    </head>
    <body>
        <!-- navigation-->
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand text-dark Oz" asp-controller="Home" asp-action="Index"><img src="~/img/dear_coder_logo_60x60.png" /></a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarresponsive" aria-controls="navbarresponsive" aria-expanded="false" aria-label="toggle navigation">
                    menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarresponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark Oz" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark Oz" asp-controller="Blogs" asp-action="Create">Create Blog</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark Oz" asp-controller="Posts" asp-action="Create">Create Post</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark Oz" asp-controller="Posts" asp-action="MyPosts">Manage Posts</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark Oz" asp-area="" asp-controller="swagger" asp-action="Index">API</a>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <!-- page header-->
        <header class="masthead" style="background-image: url('/img/parchment_1.jpg')">
            <div class="overlay"></div>

            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        <div class="site-heading">
                            <h1 class="text-dark animate__animated animate__flipInX Enriqueta mb-1">@ViewData["HeaderText"],</h1>
                            <br />
                            <br />
                            <span class="subheading text-dark font-weight-bold Enriqueta animate__animated animate__flipInX animate__delay-1s">@ViewData["SubheaderText"]</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <!-- Footer-->
        <footer>
            <hr />
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        <ul class="list-inline text-center">
                            <li class="list-inline-item">
                                <a href="https://twitter.com/KaseyWahl8" target="_blank">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="https://www.linkedin.com/in/kasey-wahl/" target="_blank">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-linkedin fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="https://github.com/Piaomu" target="_blank">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li>
                        </ul>
                        <p class="copyright text-muted Enriqueta">Copyright &copy; Dear Coder 2021</p>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="//code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="//cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/summernote-bs4.js"></script>

        <!-- Summer Note Script -->
        <script>
            $(document).ready(function () {
                $('#Content').summernote();
            });
        </script>

 <!-- Summer Note - Responsive image fix -->
    <script>
        $(document).ready(function () {
            $("img").addClass("img-fluid");
            $("img").parent("span").css("width", "auto");
            $("img").parent("span").css("height", "auto");
        });
    </script>

        <!-- Core theme JS-->
        <script src="~/js/scripts.js"></script>

        <!--Sections-->
        @await RenderSectionAsync("Scripts", required: false)
        @await RenderSectionAsync("Header", required: false) 
        @await RenderSectionAsync("HelloKasey", required: false) 

    </body>
</html>
